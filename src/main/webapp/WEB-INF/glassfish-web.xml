  <security-role-mapping>
    <role-name>AdminRole</role-name>
    <group-name>ADMINISTRATOR</group-name>
  </security-role-mapping>
  <security-role-mapping>
    <role-name>ClientRole</role-name>
    <group-name>ADMINISTRATOR</group-name>
